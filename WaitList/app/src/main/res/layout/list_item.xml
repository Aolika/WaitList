<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_list_item_layout_height"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_party_size"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:textSize="@dimen/activity_list_item_party_size_text_size" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_list_item_name_margin"
        android:layout_weight="1"
        android:fontFamily="sans-serif"
        android:text="@string/activity_list_item_name" />

</LinearLayout>




